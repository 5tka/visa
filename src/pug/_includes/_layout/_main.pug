main.main
  section.services
    .container
      h2.title.services-title.
        Для вас більше <br>10 видів послуг
    .services-list
      +services-item('img/serv/s' + 1 + '.jpg', 'Робочі візи')
      +services-item('img/serv/s' + 2 + '.jpg', 'Туристичні візи')
      +services-item('img/serv/s' + 3 + '.jpg', 'Візи для бізнесу')
      +services-item('img/serv/s' + 4 + '.jpg', 'Візи для студентів')
      +services-item('img/serv/s' + 5 + '.jpg', 'Гостьові візи')
      +services-item('img/serv/s' + 6 + '.jpg', 'Візи для нареченої та нареченого')
      +services-item('img/serv/s' + 7 + '.jpg', 'Візи для релігійних працівників')
      +services-item('img/serv/s' + 8 + '.jpg', 'Візи для журналістів')
